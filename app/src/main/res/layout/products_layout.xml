<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <TextView
            android:id="@+id/tvRachni15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rachani 15/25g"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etRachni15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <TextView
            android:id="@+id/tvRachniKG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rachni in KG"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etRachniKG"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <TextView
            android:id="@+id/tvGreenCone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green Cone"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etGreenCone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <TextView
            android:id="@+id/tvFastHenna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fast Henna"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etFastHenna"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <TextView
            android:id="@+id/tvClassicCone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classic Cone"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etClassicCone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
